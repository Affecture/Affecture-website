---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="button">
  <p>
    {title}
    <p></p>
    <style>
      .button {
        padding: 10px;
        padding-left: 28px;
        padding-right: 28px;
        border-radius: 10px;
        border-width: 2px;
        border-style: solid;
        width: fit-content;
        transition: all 0.3s;
        background-image: white;
      }
      p {
        font-size: 16px;
        font-weight: bold;
        margin: 0;
        pointer-events: none;
        -webkit-user-select: none;
        -ms-user-select: none;
        user-select: none;
      }
      .button:is(:hover, :focus-within) {
        background-color: rgb(230, 230, 230);
        /* border-color: rgb(204, 203, 203); */
        cursor: pointer;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
      }
      .button:is(:hover, :focus-within) p {
        background-image: var(--accent-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 400%;
        background-position: 0%;
      }
    </style>
  </p>
</div>
