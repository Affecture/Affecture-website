---
interface Props {
  title: string;
  body: string;
}

const { title, body } = Astro.props;
---

<li class="link-card">
  <slot />
  <h3>
    {title}
  </h3>
  <p>
    {body}
  </p>
</li>
<style>
  .link-card {
    list-style: none;
    display: flex;
    flex-direction: column;
    padding-top: 35px;
    padding-bottom: 35px;
    padding-left: 40px;
    padding-right: 40px;
    background-image: none;
    height: fit-content;
    background-size: 400%;
    border-radius: 20px;
    background-position: 100%;
    /* From https://css.glass */
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(7.8px);
    -webkit-backdrop-filter: blur(7.8px);
    background:
      linear-gradient(rgba(29, 31, 35, 0.5), rgba(29, 31, 35, 0.5)) padding-box,
      linear-gradient(to bottom right, #6666664a, #00000041) border-box;
    border: 2px solid transparent;
  }
  h3 {
    margin: 0;
    margin-top: 60px;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  p {
    margin-top: 0.8rem;
    margin-bottom: 0;
  }

  @media only screen and (max-width: 850px) {
  }
</style>
