---
import { Picture } from "astro:assets";

interface Props {
  slug: string;
  name: string;
  title: string;
  link: string;
}

const { name, title, slug, link } = Astro.props;
---

<li class="link-card">
  <Picture
    src={import(`../../assets/person/${slug}.jpeg`)}
    alt={name}
    formats={["avif", "webp", "jpeg"]}
    class="rounded-full"
  />
  <a href={link} target="_blank">
    <p class="author">
      {name}
    </p>
  </a>
  <p class="bodyText">
    {title}
  </p>
  <slot />
</li>
<style>
  .link-card {
    flex: 1;
    list-style: none;
    display: flex;
    flex-direction: column;
    align-items: center;
    /* gap: 40px; */
    padding-top: 35px;
    padding-bottom: 30px;
    padding-left: 40px;
    padding-right: 40px;
    /* background-color: #23262d; */
    background-image: none;
    background-size: 400%;
    border-radius: 20px;
    background-position: 100%;
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(7.8px);
    -webkit-backdrop-filter: blur(7.8px);
    background:
      linear-gradient(rgba(29, 31, 35, 0.5), rgba(29, 31, 35, 0.5)) padding-box,
      linear-gradient(to bottom right, #6666664a, #00000041) border-box;
    border: 2px solid transparent;
  }
  h3 {
    margin: 0;
    margin-top: 2rem;
    font-size: 28px;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  a {
    /* text-decoration: underline; */
    border-bottom: 2px solid white;
    line-height: 135%;
  }
  a:hover {
    opacity: 60%;
  }
  p {
    margin-top: 1rem;
    font-size: 18px;
    margin-bottom: 0;
  }
  .bodyText {
    margin-top: 1rem;
    opacity: 70%;
    font-weight: 300;
  }
  .author {
    font-size: 22px;
    margin-top: 2rem;
  }
  .rounded-full {
    border-radius: 100%;
    max-width: 100%;
    height: 100%;
  }
</style>
