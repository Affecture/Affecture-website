---
interface Props {
  title: string;
  body: string;
}

const { title, body } = Astro.props;
---

<li class="link-card">
  <div class="text-content">
    <h3>
      {title}
    </h3>
    <p>
      {body}
    </p>
  </div>
  <slot />
