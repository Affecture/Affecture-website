---
interface Props {
  title: string;
  body: string;
}

const { title, body } = Astro.props;
---

<li class="link-card">
  <div class="slot-div">
    <slot />
  </div>
  <div class="text-content">
    <h3>
      {title}
    </h3>
    <p>
      {body}
    </p>
  </div>
</li>
<style>
  .link-card {
    display: flex;
    flex-direction: row;
    /* justify-content: left; */
    gap: 30px;
    padding-top: 30px;
    padding-bottom: 30px;
    padding-left: 30px;
    padding-right: 30px;
    background-image: none;
    background-size: 400%;
    border-radius: 19px;
    background-position: 100%;
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
    border-style: solid;
    border-width: 0px;
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(7.8px);
    -webkit-backdrop-filter: blur(7.8px);
    background:
      linear-gradient(rgba(228, 232, 237, 0.5), rgba(219, 224, 230, 0.5))
        padding-box,
      linear-gradient(to bottom right, #6666664a, #00000041) border-box;
    border: 2px solid transparent;
    color: black;
  }
  .text-content {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin: 0;
    padding: 0;
  }
  h3 {
    margin: 0;
    margin-top: 7px;
    font-size: 28px;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  p {
    margin-top: 20px;
    margin-right: 80px;
    font-size: 18px;
    margin-bottom: 0;
  }
  .slot-div {
    max-width: 48px;
    margin: 0;
  }

  @media only screen and (max-width: 850px) {
    .link-card {
      list-style: none;
      display: flex;
      flex-direction: column;
      gap: 10px;
    }
  }
</style>
