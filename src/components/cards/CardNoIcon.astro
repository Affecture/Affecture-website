---
interface Props {
	title: string;
	body: string;
}

const { title, body } = Astro.props;
---

<li class="link-card">
		<h3>
			{title}
		</h3>
		<p>
			{body}
		</p>
</li>
<style>
	.link-card {
		list-style: none;
		display: flex;
		flex-direction: column;
		/* gap: 40px; */
		padding-top: 25px;
		padding-bottom: 30px;
		padding-left: 40px;
		padding-right: 40px;
		background-image: none;
		background-size: 400%;
		border-radius: 20px;
		background-position: 100%;
		box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
		backdrop-filter: blur(7.8px);
		-webkit-backdrop-filter: blur(7.8px);
		background: linear-gradient(rgba(228, 232, 237, 0.5), rgba(219, 224, 230, 0.5)) padding-box,
              linear-gradient(to bottom right, #6666664a, #00000041) border-box;
		border: 2px solid transparent;
		color: black;
	}
	h3 {
		margin: 0;
		font-size: 28px;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: auto;
		font-size: 18px;
		margin-bottom: 0;
	}
</style>
