---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<li class="link-card">
		<slot />
		<h3>
			{title}
		</h3>
</li>
<style>
	.link-card {
		list-style: none;
		display: flex;
		flex-direction: row;
		gap: 30px;
		/* align-items: center; */
		justify-content: center;
		padding-top: 30px;
		padding-bottom: 30px;
		padding-left: 40px;
		padding-right: 40px;
		background-image: none;
		height: 100%;
		/* width: 100%; */
		background-size: 400%;
		border-radius: 20px;
		background-position: 100%;
		/* From https://css.glass */
		box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
		backdrop-filter: blur(7.8px);
		-webkit-backdrop-filter: blur(7.8px);
		background: linear-gradient(rgba(29, 31, 35, 0.5), rgba(29, 31, 35, 0.5)) padding-box,
              linear-gradient(to bottom right, #6666664a, #00000041) border-box;
		border: 2px solid transparent;
	}
	h3 {
		margin: 0;
		margin-top: auto;
		font-size: 24px;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		text-align: center;
	}
	@media only screen and (min-width: 850px) {
		.link-card {
			width: 100%;
		}
	}

</style>
