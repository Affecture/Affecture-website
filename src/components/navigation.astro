---
import { Picture } from "astro:assets";
import logo from "@assets/logo.png";
import config from "@config";
import Container from "@components/containers/container.astro";
import Fullwidth from "./containers/fullwidth.astro";
---

<Fullwidth class="mb-12 sticky top-0 bg-background z-10">
  <Container>
    <header class="p-2 py-4 md:p-8 md:py-12">
      <nav class="flex justify-between px-4 md:px-12 self-center">
        <a href={[config.url, config.base].join("")} class="hidden sm:block">
          <Picture
            src={logo}
            alt="The affecture logo"
            width={150}
            formats={["avif", "webp", "png"]}
          />
        </a>
        <ul
          class="flex gap-4 md:gap-24 md:self-center justify-center mx-auto md:mr-0"
        >
          <li>
            <a
              href={[config.url, config.base].join("")}
              class="font-light p-2 rounded-lg ring-0 ring-pink hover:ring-1"
              >Home</a
            >
          </li>
          <li>
            <a
              href={[config.url, config.base, "/about"].join("")}
              class="font-light p-2 rounded-lg ring-0 ring-pink hover:ring-1"
              >About us</a
            >
          </li>
          <li>
            <a
              href={[config.url, config.base, "/contact"].join("")}
              class="font-light p-2 rounded-lg ring-0 ring-purple hover:ring-1 hover:bg-purple"
              >Contact us</a
            >
          </li>
        </ul>
      </nav>
    </header>
  </Container>
</Fullwidth>
