---
import { Picture } from 'astro:assets';
import logo from "@assets/logo.png";
import config from '@config';
import Container from './containers/container.astro';
---
<Container class="mb-12 sticky top-0 bg-slate-900">
    <header class="p-2 py-4 md:p-8 md:py-12">
        <nav class="flex justify-between px-4 md:px-12 self-center">
            <a href={config.url} class="hidden md:block">
                <Picture src={logo} alt="The affecture logo"  width={150}  formats={['avif', 'webp', 'png']} />
            </a>
            <ul class="flex gap-4 md:gap-24 self-center">
                <li><a href="#product" class="font-light p-2 rounded-lg ring-0 ring-pink hover:ring-1">Product</a></li>
                <li><a href="#about" class="font-light p-2 rounded-lg ring-0 ring-pink hover:ring-1">About us</a></li>
                <li><a href="#contact" class="font-light p-2 rounded-lg ring-0 ring-purple hover:ring-1 hover:bg-purple">Contact us</a></li>
            </ul>
        </nav>
    </header>
</Container>
