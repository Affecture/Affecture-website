---
import { type CollectionEntry } from "astro:content";

interface Props {
  virtue: CollectionEntry<"virtue">;
}
const { data } = Astro.props.virtue;
---

<article class="flex flex-col p-4 md:p-8 justify-around">
  <header class="text-center p-2">
    <h1 class="text-3xl font-bold">{data.title}</h1>
  </header>
  <section class="self-center">
    {data.details.map((d) => <p class="mb-4">{d}</p>)}
  </section>
</article>
