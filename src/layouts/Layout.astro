---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="initial-scale=1.0, width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300..700&display=swap"
      rel="stylesheet"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-purple: 111, 60, 248;
    --accent-pink: 254, 39, 146;
    --accent-orange: 252, 174, 23;
    --padding: 7vw;
    --double-padding: calc(var(--padding) * 2);
    --negative-padding: calc(-1 * var(--padding));
    --accent-gradient: linear-gradient(
      to right,
      rgb(var(--accent-purple)) 0%,
      rgb(var(--accent-pink)) 15%,
      rgb(var(--accent-orange)) 30%
    );
    --accent-gradient2: linear-gradient(
      to right,
      rgb(var(--accent-pink)),
      rgb(var(--accent-orange))
    );
    --accent-gradient3: linear-gradient(
      to right,
      rgb(var(--accent-purple)) 0%,
      rgb(var(--accent-pink)) 50%,
      rgb(var(--accent-orange)) 100%
    );
  }
  a {
    text-decoration: none;
    color: white;
  }
  html {
    font-family: system-ui, sans-serif;
    background: #13151a;
    width: 100%;
    max-width: 100%;
    margin: 0px;
    padding: 0px;
  }
  body {
    margin: 0px;
    padding: 0px;
    overscroll-behavior-y: none;
    overflow: scroll;
    overflow-x: hidden;
  }
  h1 {
    font-family: "Space Grotesk", sans-serif;
    font-optical-sizing: auto;
    font-weight: 600;
    font-style: normal;
    font-size: 80px;
    text-align: center;
    line-height: 100px;
    pointer-events: none;
    -webkit-user-select: none;
    -ms-user-select: none;
    user-select: none;
    /* margin: 80px; */
  }
  h2 {
    font-family: "Space Grotesk", sans-serif;
    font-optical-sizing: auto;
    font-weight: 600;
    font-style: normal;
    font-size: 48px;
    line-height: normal;
  }
  h3 {
    font-family: "Space Grotesk", sans-serif;
    font-optical-sizing: auto;
    font-weight: 600;
    font-style: normal;
    font-size: 30px;
    line-height: normal;
  }
  p {
    font-family: "Inter", sans-serif;
    font-weight: normal;
    font-size: 18px;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }

  @media only screen and (max-width: 850px) {
    h1 {
      font-size: 50px;
      line-height: 130%;
    }
    h2 {
      font-size: 36px;
    }
    h3 {
      font-size: 28px;
    }
    p {
      font-size: 16px;
    }
  }
</style>
