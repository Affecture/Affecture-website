---
import Container from "@components/containers/container.astro";
import FullScreen from "@components/containers/fullscreen.astro";
import FullWidth from "@components/containers/fullwidth.astro";
import Navigation from "@components/navigation.astro";
import FeatureGallery from "@components/feature/gallery.astro";
import HighlightText from "@components/typography/highlight.astro";
import Html from "@layouts/html.astro";
import Contact from "@components/contact.astro";
import OfferingGallery from "@components/offering/gallery.astro";
---

<Html>
  <Navigation />
  <div
    class="bg-cover"
    style="background-image: url('/src/assets/feature/background.png');"
  >
    <FullScreen
      class="mt-[-50px] min-h-fit md:max-h-[80vh] md:min-h-[30vh] p-2 py-20 md:p-36 text-center flex flex-col gap-6 justify-center bg-gradient-to-br from-purple via-pink to-orange"
      style="margin-bottom: 40px;"
    >
      <p class="max-w-3xl mx-auto text-5xl [text-wrap:balance] leading-relaxed">
        Games user research user biosignals and AI to deliver deeper and faster
        results
      </p>
      <p class="max-w-3xl mx-auto text-2xl [text-wrap:balance] leading-relaxed">
        Affecture allows you to understand the player experience with accurate
        data on stress, attention, and emotional qualities of gameplay
      </p>
    </FullScreen>
  </div>
</Html>
<Container id="features" class="mb-12">
  <h1
    class="text-4xl text-center md:text-justify mb-8"
    style="text-indent: 50px;"
  >
    What we do
  </h1>
  <section class="px-8 md:px-20">
    <style>
      .list-none {
        list-style-type: none; /* Remove default bullet points */
        padding: 0;
      }

      .item {
        margin-bottom: 40px; /* Adjust the vertical spacing here */
      }

      .headline-1,
      .headline-2,
      .headline-3,
      .headline-4 {
        font-size: 2rem; /* Adjust font size as needed */
      }

      .item strong {
        display: block; /* Display headings as blocks for consistent spacing */
        color: #8508fb; /* Apply the custom color */
        margin-bottom: 10px; /* Adjust spacing between heading and text */
      }

      .item p {
        font-size: 1.5rem; /* Adjust the font size of paragraph text */
        text-align: justify; /* Align paragraph text */
      }

      .column {
        flex: 1; /* Equal width for both columns */
        margin-right: 100px; /* Adjust horizontal space between columns */
        max-width: 600px; /* Adjust the maximum width to control line length */
        text-align: justify; /* Align text horizontally */
      }

      .column:last-child {
        margin-right: 0; /* Remove margin-right for the last column */
      }
    </style>

    <div class="flex justify-center">
      <div class="column max-w-xs">
        <ul class="list-none">
          <li class="item">
            <strong class="headline-1">Validate your vision:</strong>
            <p>
              Our biometric insights help you better understand players'
              behavior and make informed design choices.
            </p>
          </li>
          <li class="item">
            <strong class="headline-2">Confident design decisions:</strong>
            <p>
              Biometric research helps you make confident design choices based
              on player behavior insights.
            </p>
          </li>
        </ul>
      </div>
      <div class="column max-w-xs">
        <ul class="list-none">
          <li class="item">
            <strong class="headline-3">De-risk and reduce rework:</strong>
            <p>
              Our studies help de-risk game development by identifying
              challenges early and minimizing unnecessary work.
            </p>
          </li>
          <li class="item">
            <strong class="headline-4">More engaging games:</strong>
            <p>
              Our biometric insights help ensure that your creative vision
              aligns with the real player experience.
            </p>
          </li>
        </ul>
      </div>
    </div>
  </section>
</Container>

<p class="text-lg mb-8">
  <!-- Our novel technology helps user researchers to collect and understand
        biometric data efficiently, contextualize it, and communicate findings,
        improving the effectiveness of user research -->
</p>

<FeatureGallery />

<FullWidth
  class="bg-gradient-to-br from-purple via-pink to-orange py-10 md:py-10"
>
  <Container class="py-8">
    <h1 class="text-6xl text-center [text-wrap:balance] mb-12">
      How to test with us
    </h1>
  </Container>
</FullWidth>
<Container id="features" class="mb-12 py-4">
  <section class="px-8 md:px-20">
    <p class="text-lg mb-8">
      <!--After the goals and audience are defined, you have three options to
        continue:-->
    </p>
  </section>
  <OfferingGallery />
</Container>
<FullWidth id="contact" class="min-h-[30vh]">
  <Container class="py-8">
    <h1 class="text-4xl text-center">Get in touch</h1>
    <h2 class="text-2xl text-center">
      Want to <HighlightText>know more</HighlightText> or <HighlightText>
        order our services
      </HighlightText>?
    </h2>
    <section class="py-12 px-8 md:px-20 text-center">
      <Contact />
    </section>
  </Container>
</FullWidth>
