---
import Container from "@components/containers/container.astro";
import FullScreen from "@components/containers/fullscreen.astro";
import FullWidth from "@components/containers/fullwidth.astro";
import Navigation from "@components/navigation.astro";
import WhatWeDo from "@components/whatwedo.astro";
import FeatureGallery from "@components/feature/gallery.astro";
import HighlightText from "@components/typography/highlight.astro";
import Html from "@layouts/html.astro";
import Contact from "@components/contact.astro";
import OfferingGallery from "@components/offering/gallery.astro";
---

<Html>
  <Navigation />
  <div
    class="bg-cover"
    style="background-image: url('/src/assets/feature/background.png');"
  >
    <FullScreen
      class="mt-[-50px] min-h-fit md:max-h-[80vh] md:min-h-[30vh] p-2 py-20 md:p-36 text-center flex flex-col gap-6 justify-center"
      style="margin-bottom: 40px; background:none;"
    >
      <p
        class="max-w-4xl mx-auto text-6xl [text-wrap:balance] leading-relaxed"
      >
        Games user research with biosignals and AI to deliver deeper and faster
        results
      </p>
      <p
        class="max-w-3xl mx-auto text-3xl [text-wrap:balance] leading-relaxed"
      >
        Affecture allows you to understand the player experience with accurate
        data on stress, attention, and emotional qualities of gameplay
      </p>
    </FullScreen>
  </div>
</Html>

<Container id="features" class="mb-12">
  <h1
    class="text-4xl text-center md:text-justify mb-8"
    style="text-indent: 50px;"
  >
    What we do
  </h1>
  <section class="px-8 md:px-20">
    <WhatWeDo />
  </section>
</Container>

<p class="text-lg mb-8">
  <!-- Our novel technology helps user researchers to collect and understand
        biometric data efficiently, contextualize it, and communicate findings,
        improving the effectiveness of user research -->
</p>

<FeatureGallery />

<FullWidth
  class="bg-gradient-to-br from-purple via-pink to-orange py-10 md:py-10"
>
  <Container class="py-8">
    <h1 class="text-6xl text-center [text-wrap:balance] mb-4">
      How to test with us
    </h1>
  </Container>
</FullWidth>
<Container id="features" class="mb-12 py-4">
  <section class="px-8 md:px-20">
    <p class="text-lg mb-8">
      <!--After the goals and audience are defined, you have three options to
        continue:-->
    </p>
  </section>
  <OfferingGallery />
</Container>
<FullWidth id="contact" class="min-h-[30vh]">
  <Container class="py-8">
    <h1 class="text-4xl text-center">Get in touch</h1>
    <h2 class="text-2xl text-center">
      Want to <HighlightText>know more</HighlightText> or <HighlightText>
        order our services
      </HighlightText>?
    </h2>
    <section class="py-12 px-8 md:px-20 text-center">
      <Contact />
    </section>
  </Container>
</FullWidth>
