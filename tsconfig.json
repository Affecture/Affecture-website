{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@pages/*": ["src/pages/*"],
      "@config": ["src/config.mjs"],
    },
    "plugins": [
      {
        "name": "@astrojs/ts-plugin",
      },
    ],
  },
}
